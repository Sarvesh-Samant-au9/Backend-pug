extends layout
block content
  center
    h1 #{title} 
  h1 #{article.title}  
  form(action=`/articles/edit/${article._id}`,method = "POST")
    .form-group
      label(for="title") Title:-
      input.form-control(type="text", name="title",id="title", value=article.title)
    .form-group
      label(for="author") Author:
      input.form-control(type="text",name="author", id = "author", value=article.author) 
    .form-group
      label(for="author") Body:
      textarea.form-control(name="body")=article.body
    br
    input.btn.btn-primary(type="submit",value="Submit")