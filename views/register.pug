extends layout
block content
  center 
    h1 Register
  form(action="/users/register", method = "POST")
    .form-group
      label(for="name") Name:-
      input.form-control(type="text", name= "name", id="name")
    .form-group
      label(for="email") Email:
      input.form-control(type="email", name = "email", id = "email") 
    .form-group
      label(for="username") User-Name:
      input.form-control(type="text", name = "username", id = "username")
    .form-group
      label(for="password") Password:
      input.form-control(type="password", name = "password", id = "password")
    .form-group
      label(for="cPassword") Confirm Password:
      input.form-control(type="password", name = "cPassword", id = "cPassword")
    br
    input.btn.btn-primary(type="submit", value="Register")